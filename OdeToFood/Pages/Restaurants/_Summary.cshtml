@using OdeToFood.Core
@model Restaurant

<div class="card mb-3">
    <div class="card-header">
        <h3>@Model.Name</h3>
    </div>
    <div class="card-body">
        <span>Location: @Model.Location</span>
        <span>Cuisine: @Model.Cuisine</span>
    </div>
    <div class="card-footer">
        <a class="btn btn-outline-dark" asp-page="./Details" asp-route-restaurantId="@Model.Id">
            Details
        </a>
        <a class="btn btn-outline-info" asp-page="./Edit" asp-route-restaurantId="@Model.Id">
            Edit
        </a>
        <a class="btn btn-outline-danger" asp-page="./Delete" asp-route-restaurantId="@Model.Id">
            Delete
        </a>
    </div>
</div>